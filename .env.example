# Elasticsearch Configuration
ELASTICSEARCH_ENDPOINT=your_elasticsearch_endpoint
ELASTICSEARCH_API_KEY="your_api_key"

# Flask Configuration
FLASK_DEBUG=True
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# Application Configuration
APP_NAME=Jollibee BeeLoyalty System
APP_VERSION=1.0.0

# Menu Data Source
JOLLIBEE_MENU_URL=https://jollibeemenuprice.ph
USE_LIVE_MENU_DATA=false
MENU_CACHE_DURATION=3600  # Cache menu data for 1 hour

# Elasticsearch Indices
INDEX_MENU=jollibee-menu
INDEX_CUSTOMERS=jollibee-customers
INDEX_TRANSACTIONS=jollibee-transactions
INDEX_INVENTORY=jollibee-inventory
INDEX_STORES=jollibee-stores
INDEX_WEATHER=jollibee-weather

# ELSER Model Configuration
ELSER_MODEL_ID=.elser_model_2_linux-x86_64
ELSER_PIPELINE_NAME=jollibee-elser-pipeline

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
